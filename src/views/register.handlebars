<form action="/api/sessions/register" method="POST">

  <label for="first_name">Nombre:</label>
  <input maxlength="80" type="text" id="first_name" name="first_name" required/>

  <label for="last_name">Apellido:</label>
  <input maxlength="80" type="text" id="last_name" name="last_name" required/>

  <label for="email">Correo electrónico:</label>
  <input maxlength="80" type="email" id="email" name="email" required/>

  <label for="password">Contraseña:</label>
  <input
    maxlength="60"
    type="password"
    id="password"
    name="password"
    required
  />

  <button type="submit">Enviar</button>
</form>

<a href="/login">¿Ya tiene una cuenta?</a>